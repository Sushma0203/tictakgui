<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TicTacToeGUI.MainWindow"
        Title="Tic-Tac-Toe" Width="380" Height="480"
        Background="#FFFFFF">

  <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Spacing="10">
    
    <!-- Scoreboard Panel -->
    <Border Background="#f0f0f0" CornerRadius="10" Padding="10" Width="300" HorizontalAlignment="Center">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20">
            <TextBlock Name="XScoreText" Text="X: 0" FontSize="18" FontWeight="Bold" Foreground="#e74c3c"/>
            <TextBlock Name="DrawScoreText" Text="Draws: 0" FontSize="18" FontWeight="Bold" Foreground="#2c3e50"/>
            <TextBlock Name="OScoreText" Text="O: 0" FontSize="18" FontWeight="Bold" Foreground="#3498db"/>
        </StackPanel>
    </Border>

    <!-- Status -->
    <TextBlock Name="StatusText" Text="Turn: X" FontSize="20" FontWeight="Bold" Foreground="#2c3e50" HorizontalAlignment="Center"/>

    <!-- Tic-Tac-Toe Grid -->
    <Grid Name="BoardGrid" Width="300" Height="300">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Buttons 0-8 -->
        <Button Name="btn0" Grid.Row="0" Grid.Column="0" Background="#ffffff" BorderBrush="#2c3e50" BorderThickness="2" FontSize="36" Click="Button_Click" CornerRadius="10"/>
        <Button Name="btn1" Grid.Row="0" Grid.Column="1" Background="#ffffff" BorderBrush="#2c3e50" BorderThickness="2" FontSize="36" Click="Button_Click" CornerRadius="10"/>
        <Button Name="btn2" Grid.Row="0" Grid.Column="2" Background="#ffffff" BorderBrush="#2c3e50" BorderThickness="2" FontSize="36" Click="Button_Click" CornerRadius="10"/>
        <Button Name="btn3" Grid.Row="1" Grid.Column="0" Background="#ffffff" BorderBrush="#2c3e50" BorderThickness="2" FontSize="36" Click="Button_Click" CornerRadius="10"/>
        <Button Name="btn4" Grid.Row="1" Grid.Column="1" Background="#ffffff" BorderBrush="#2c3e50" BorderThickness="2" FontSize="36" Click="Button_Click" CornerRadius="10"/>
        <Button Name="btn5" Grid.Row="1" Grid.Column="2" Background="#ffffff" BorderBrush="#2c3e50" BorderThickness="2" FontSize="36" Click="Button_Click" CornerRadius="10"/>
        <Button Name="btn6" Grid.Row="2" Grid.Column="0" Background="#ffffff" BorderBrush="#2c3e50" BorderThickness="2" FontSize="36" Click="Button_Click" CornerRadius="10"/>
        <Button Name="btn7" Grid.Row="2" Grid.Column="1" Background="#ffffff" BorderBrush="#2c3e50" BorderThickness="2" FontSize="36" Click="Button_Click" CornerRadius="10"/>
        <Button Name="btn8" Grid.Row="2" Grid.Column="2" Background="#ffffff" BorderBrush="#2c3e50" BorderThickness="2" FontSize="36" Click="Button_Click" CornerRadius="10"/>
    </Grid>

    <!-- Control Buttons -->
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
        <Button Name="ResetButton" Content="Reset" Width="100" Background="#3498db" Foreground="White" Click="ResetButton_Click" CornerRadius="10"/>
        <Button Name="UndoButton" Content="Undo" Width="100" Background="#e67e22" Foreground="White" Click="UndoButton_Click" CornerRadius="10"/>
    </StackPanel>

  </StackPanel>
</Window>
