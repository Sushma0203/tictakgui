<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TicTacToeGUI.MainWindow"
        Title="Tic-Tac-Toe" Width="300" Height="350">
  
  <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
    <TextBlock Name="StatusText" Text="Turn: X" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,10"/>
    <Grid Name="BoardGrid">
      <Grid.RowDefinitions>
        <RowDefinition Height="80"/>
        <RowDefinition Height="80"/>
        <RowDefinition Height="80"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="80"/>
        <ColumnDefinition Width="80"/>
        <ColumnDefinition Width="80"/>
      </Grid.ColumnDefinitions>
      
      <!-- Buttons 0-8 -->
      <Button Name="btn0" Grid.Row="0" Grid.Column="0" Click="Button_Click"/>
      <Button Name="btn1" Grid.Row="0" Grid.Column="1" Click="Button_Click"/>
      <Button Name="btn2" Grid.Row="0" Grid.Column="2" Click="Button_Click"/>
      <Button Name="btn3" Grid.Row="1" Grid.Column="0" Click="Button_Click"/>
      <Button Name="btn4" Grid.Row="1" Grid.Column="1" Click="Button_Click"/>
      <Button Name="btn5" Grid.Row="1" Grid.Column="2" Click="Button_Click"/>
      <Button Name="btn6" Grid.Row="2" Grid.Column="0" Click="Button_Click"/>
      <Button Name="btn7" Grid.Row="2" Grid.Column="1" Click="Button_Click"/>
      <Button Name="btn8" Grid.Row="2" Grid.Column="2" Click="Button_Click"/>
    </Grid>

    <Button Name="ResetButton" Content="Reset" Margin="0,10,0,0" Click="ResetButton_Click"/>
  </StackPanel>
</Window>
