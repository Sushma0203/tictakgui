<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TicTacToeGUI.MainWindow"
        Title="Tic-Tac-Toe" Width="550" Height="750"
        Background="#E6E6FA"> 

  <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0" Spacing="15">

    <!-- Scoreboard -->
    <Border Background="#D9C9F2" CornerRadius="15" Padding="15" Width="400" HorizontalAlignment="Center">
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="30">
        <TextBlock Name="XScoreText" Text="X: 0" FontSize="20" FontWeight="Bold" Foreground="#4B0082"/>
        <TextBlock Name="DrawScoreText" Text="Draws: 0" FontSize="20" FontWeight="Bold" Foreground="#4B0082"/>
        <TextBlock Name="OScoreText" Text="O: 0" FontSize="20" FontWeight="Bold" Foreground="#FF1493"/>
      </StackPanel>
    </Border>

    <!-- Status -->
    <TextBlock Name="StatusText" Text="Turn: X" FontSize="22" FontWeight="Bold" Foreground="#4B0082" HorizontalAlignment="Center"/>

    <!-- Tic-Tac-Toe Grid -->
    <Grid Name="BoardGrid" Width="360" Height="360" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Buttons 0-8 -->
        <Button Name="btn0" Grid.Row="0" Grid.Column="0" Background="#E6E6FA" BorderBrush="#B299E6" BorderThickness="2" FontSize="36" Click="Button_Click" ZIndex="1"/>
        <Button Name="btn1" Grid.Row="0" Grid.Column="1" Background="#E6E6FA" BorderBrush="#B299E6" BorderThickness="2" FontSize="36" Click="Button_Click" ZIndex="1"/>
        <Button Name="btn2" Grid.Row="0" Grid.Column="2" Background="#E6E6FA" BorderBrush="#B299E6" BorderThickness="2" FontSize="36" Click="Button_Click" ZIndex="1"/>
        <Button Name="btn3" Grid.Row="1" Grid.Column="0" Background="#E6E6FA" BorderBrush="#B299E6" BorderThickness="2" FontSize="36" Click="Button_Click" ZIndex="1"/>
        <Button Name="btn4" Grid.Row="1" Grid.Column="1" Background="#E6E6FA" BorderBrush="#B299E6" BorderThickness="2" FontSize="36" Click="Button_Click" ZIndex="1"/>
        <Button Name="btn5" Grid.Row="1" Grid.Column="2" Background="#E6E6FA" BorderBrush="#B299E6" BorderThickness="2" FontSize="36" Click="Button_Click" ZIndex="1"/>
        <Button Name="btn6" Grid.Row="2" Grid.Column="0" Background="#E6E6FA" BorderBrush="#B299E6" BorderThickness="2" FontSize="36" Click="Button_Click" ZIndex="1"/>
        <Button Name="btn7" Grid.Row="2" Grid.Column="1" Background="#E6E6FA" BorderBrush="#B299E6" BorderThickness="2" FontSize="36" Click="Button_Click" ZIndex="1"/>
        <Button Name="btn8" Grid.Row="2" Grid.Column="2" Background="#E6E6FA" BorderBrush="#B299E6" BorderThickness="2" FontSize="36" Click="Button_Click" ZIndex="1"/>
    </Grid>


    <!-- Controls -->
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="15">
      <Button Name="ResetRoundButton" Content="Reset Round" Width="130" Click="ResetRound_Click" CornerRadius="15" Background="#D9C9F2" Foreground="#4B0082"/>
      <Button Name="NewMatchButton" Content="New Match" Width="130" Click="NewMatch_Click" CornerRadius="15" Background="#D9C9F2" Foreground="#4B0082"/>
    </StackPanel>

    <!-- AI Difficulty -->
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" Spacing="10">
      <TextBlock Text="AI Difficulty:" VerticalAlignment="Center" Foreground="#4B0082"/>
      <Slider Name="DifficultySlider" Minimum="1" Maximum="3" Value="1" Width="150"/>
      <TextBlock Name="DifficultyLabel" Text="Easy" VerticalAlignment="Center" Foreground="#4B0082"/>
    </StackPanel>

  </StackPanel>
</Window>
